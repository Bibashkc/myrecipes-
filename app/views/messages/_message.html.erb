<div class = "message">
  <p>
    <small><em>Created <%=time_ago_in_words(message.created_at)%> ago </em></small>
    </p>
    <p>
      <%= gravatar_for(message.chef, size:50)%>
    <strong><%= link_to message.chef.chefname.capitalize, chef_url(message.chef)%></strong>
    <span class = "content">
      <%=message.content%>
    </span>
  </p>
</div>