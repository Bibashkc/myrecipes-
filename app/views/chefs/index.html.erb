<%=render 'shared/page_title', title: "chefs" %>
<div align="center">
  <%= will_paginate %>
</div>

<div align= "center">
  <%@chefs.each do |chef|%>
    <ul class = "listing">
      <div class = "row">
        <div class = "well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(chef), chef_url(chef)%></li>
          <li class = "chef-title"><%=link_to chef.chefname.capitalize, chef_url(chef)%></li>
          <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes%></small></li>
        </div>
      </div>
    </ul>
  <%end%>
</div>

<div align="center">
  <%= will_paginate %>
</div>