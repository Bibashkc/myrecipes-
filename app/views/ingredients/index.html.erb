<%=render 'shared/page_title', title: "Available Ingredients" %>
<%= render 'layouts/errors' %>
<div align="center">
  <%= will_paginate %>
</div>

<div align= "center">
  <%@ingredients.each do |ingredient|%>
    <ul class = "listing">
      <div class = "row">
        <div class = "well col-md-4 col-md-offset-4"
          <li class = "chef-title"><%=link_to ingredient.name.capitalize, ingredient_url(ingredient)%></li>
          <li><small><%= pluralize(ingredient.recipes.count, "recipe") if ingredient.recipes%></small></li>
          <% if logged_in? && current_chef.admin?%>
          <li><link_to><%=link_to "Edit this ingredient", edit_ingredient_url(ingredient)%></li>
          <%end%>
        </div>
      </div>
    </ul>
  <%end%>
</div>

<div align="center">
  <%= will_paginate %>
</div>