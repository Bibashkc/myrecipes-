<%= render 'layouts/errors'%>
<%= render 'shared/page_title', title: "Log in" %>
<form action = "<%=login_url%>" method = "POST">
  <div class = "row">
    
    <input type="hidden" name ="authenticity_token" value = "<%=form_authenticity_token%>">
  
    <div class ="form-group row">
      <label class = "col-md-1 col-form-label" style = "padding-top:5px;">Email</label>
      <div class = "col-md-8">
        <input type = "email" name="session[email]" placeholder = "Enter your email" class ="form-control">
      </div>
    </div>
    
    <div class ="form-group row">
      <label class = "col-md-1 col-form-label" style = "padding-top:5px;">Password</label>
      <div class = "col-md-8">
        <input type = "password" name="session[password]" placeholder = "Enter your password" class ="form-control">
      </div>
    </div>
    
    <div class = "form-group row">
      <div class = "col-md-offset-1 col-md-10">
        <button type = "submit" class = "btn btn-primary btn-lg btn-xlarge">Log In</button>
      </div>
    </div>
    
  </div>
</form>

  <div class="center colormatch">
    [<%=link_to "Don't have an account? Sign up now!", signup_url%>]
  </div>