<%=render 'shared/page_title', title: "Edit an existng recipe"%>
  <%= render 'layouts/errors'%>
  <form action="<%=recipe_url(@recipe)%>" method ="POST">
    <input type = "hidden" name ="_method" value="PATCH">
    <div class = "row" >
   <input type="hidden" name ="authenticity_token" value = "<%=form_authenticity_token%>">
  <div class="form-group row">
    <label class="col-md-1 col-form-label" style = "padding-top:5px;">Name</label>
    <div class="col-md-8">
      <input type="text" name= "recipe[name]" class="form-control" value="<%=@recipe.name%>" autofocus>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-md-1 col-form-label">Description</label>
    <div class="col-md-8">
      <textarea class="form-control" name="recipe[description]" rows="10"><%=@recipe.description%></textarea>
    </div>
  </div>
  
  <div class ="form-group row">
    <div class ="col-md-offset-1 col-md-10">
       <button type="submit" class="btn btn-primary btn-lg btn-xlarge">Edit Recipe</button>
      </div>
      </div>
      </div>
  </form>
  
  <div class="col-md-4 col-md-offset-4 colormatch">
    [<%=link_to "Cancel request and return to recipes", recipes_url%>]
  </div>