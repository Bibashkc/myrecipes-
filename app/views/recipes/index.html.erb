<%=render 'shared/page_title', title: "Recipes"%>
<%@recipes.each do |recipe|%>
<div class="row">
  <div class="col-md-2">
    <section class="chef_info center">
      <%=gravatar_for(recipe.chef, size: 120)%>
    </section>
  </div>
  <div class="col-md-8 well">
    <h4><%= link_to recipe.name.split.map(&:capitalize).join(" "), recipe_url(recipe)%></h4>
    <p><%=simple_format(truncate(recipe.description, length: 50))%></p>
    <p> 
      <span class = "quiet"><small>Created <%=time_ago_in_words(recipe.created_at)%> ago</small></span>
    </p>
  </div>
  
</div>
<%end%>